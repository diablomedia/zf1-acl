# grumphp.yml
grumphp:
    tasks:
        composer:
            strict: true
        composer_require_checker: ~
        phpcsfixer2:
            allow_risky: true
            config: .php-cs-fixer.php
        phpstan:
            level: 7
            configuration: phpstan.neon
        phpunit:
            metadata:
                priority: 100
            always_execute: true
